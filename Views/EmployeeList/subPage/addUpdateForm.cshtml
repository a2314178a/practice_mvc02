@{
	Layout=null;
}

<!DOCTYPE html>
<html lang="zh-TW">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta name="viewport" content="width=device-width, initial-scale=1">				    
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
		<link rel="stylesheet" href="~/css/my_style.css">
	     <title>@ViewBag.mainText</title>
	</head>

	<body>					
		<h3 style="text-align:center;">@ViewBag.mainText</h3><hr/>
		<div style="text-align:center;">
			<form id="dataForm">
				<table class="table table-striped">
					<tbody>
						<tr>
							<td width="25%">帳號:</td>
							@if(ViewBag.Action == "add")
							{
								<td><input type="text" group="detail" name="account" value=""></td>
							}
							else
							{
								<td><input type="text" group="detail" name="account" value="" readonly></td>
							}
						</tr>
						<tr>
							<td width="25%">密碼:</td>
							<td><input type="password" group="detail" name="password"></td>
						</tr>
						<tr>
							<td width="25%">確認密碼:</td>
							<td><input type="password" group="detail" name="rePassword"></td>
						</tr>
						<tr>
							<td width="25%">名字:</td>
							<td><input type="text" group="detail" name="userName" value=""></td>
						</tr>
						<tr>
							<td width="25%">報到日期:</td>
							<td><input type="date" group="detail" name="startWorkDate" value=""></td>
						</tr>
						<tr>
							<td width="25%">部門:</td>
							<td>
								<input type="hidden" id="ruleVal" value="@ViewBag.ruleVal">
								<select group="detail" name="department">
									<option value="" >請選擇</option>
								</select>
							</td>
						</tr>
						<tr>
							<td width="25%">職位</td>
							<td>
								<select group="detail" name="position">
									<option value="" >請選擇</option>
								</select>
							</td>
						</tr>
						<tr>
							<td width="25%">上班時段</td>
							<td>
								<select group="detail" name="timeRule">
									<option value="0">請選擇</option>
								</select>
							</td>
						</tr>
						<tr>
							<td width="25%">動作權限</td>
							<td>
								<select group="detail" name="actAuthority">
									<option value="">請選擇</option>
								</select>
							</td>
						</tr>
						<tr>
							<td width="25%">帳號等級</td>
							<td>
								<select group="detail" name="accLV">
									<option value="1">職員(最低)</option>
									<option value="2">單位主管</option>
									<option value="3">部門主管</option>
									<option value="4">處長/廠長</option>
									<option value="5">協理</option>
									<option value="6">總經理</option>
									<option value="7">董事(最高)</option>
								</select>
							</td>
						</tr>
						
					</tbody>
				</table>
				<hr/>
				@if(ViewBag.Action == "add")
				{
					<input type="button" name="addEmployee" value="新增" onclick="createEmployee();">
				}
				else if(ViewBag.Action == "update")
				{
					<input type="button" name="updateEmployeeBtn" value="更新" data-id="@ViewBag.ID" onclick="updateEmployee(@ViewBag.ID);">
				}
				&nbsp;&nbsp;&nbsp;&nbsp;
				<input type="button" name="cancelEdit" value="取消" onclick="closeSubWin();">
			</form>
			<br/>
		</div>




		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>	
		<script src="~/js/baseJS.js" type="text/javascript"></script> 
		<script src="~/js/subWindows.js" type="text/javascript"></script> 
	</body>
</html>